(defun autocompile (path)
  "compile PATH."
  (interactive)
  (require 'bytecomp)
  (let ((dotemacs (expand-file-name path)))
    (if (string= (buffer-file-name) (file-chase-links dotemacs))
	(byte-compile-file dotemacs))))

